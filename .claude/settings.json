{
  "permissions": {
    "allow": [
      "Skill(project-goal)",
      "Skill(persona)",
      "Skill(implement-notes)",
      "Read",
      "Write",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(pnpm add:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Bash(rm *)",
      "Bash(rm -rf *)"
    ],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.vue)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix $file"
          }
        ]
      }
    ]
  }
}